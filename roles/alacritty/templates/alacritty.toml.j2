[general]
live_config_reload = true
import = [
    "~/.config/alacritty/themes/themes/github_light.toml"
    #"~/.config/alacritty/themes/themes/github_dark.toml"
]

[cursor]
style = "Block"
unfocused_hollow = true

[font]
size = 12.0

[font.normal]
family = "Hack Nerd Font Mono"
style = "Regular"

[font.bold]
family = "Hack Nerd Font Mono"
style = "Bold"

[font.bold_italic]
family = "Hack Nerd Font Mono"
style = "Bold Italic"

[font.italic]
family = "Hack Nerd Font Mono"
style = "Italic"

[scrolling]
history = 20000
multiplier = 3

[window]
decorations = "full"
dynamic_padding = true
dynamic_title = true
opacity = 0.95
startup_mode = "Maximized"

[window.dimensions]
columns = 100
lines = 25

[window.padding]
x = 8
y = 6

[terminal]

[terminal.shell]
program = "tmux"

[keyboard]
bindings = [
    { key = "w", mods = "Control", action = "Quit" }
]
